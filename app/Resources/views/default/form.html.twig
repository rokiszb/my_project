{% extends 'base.html.twig' %}
{% block title %}Subscribe{% endblock %}

{% block body %}
<div class="container">
    <h1>Subscripction form </h1>
    {{ form_start(form) }}
        <div class="form-group">
            <label for="inputName">Name</label>
            {{ form_widget(form.name, {'attr':{'class': 'form-control', 'placeholder': 'Enter name', 'pattern': '([A-Za-z]){3,}', 'title': 'Only alphabet letters, minimum 3'}}) }}
        </div>
        <div class="form-group">
            <label for="inputEmail">Email address</label>
            {{ form_widget(form.email, {'attr':{'class': 'form-control', 'placeholder': 'Enter email'}}) }}
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <div class="form-check">
                {# <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Default checkbox
                </label> #}
            {{ form_widget(form.checkbox, {'attr':{'class': 'form-check-input'}} )  }}
            {{ form_label(form.checkbox ) }}
            </div>
        </div>
        {{ form_widget(form.save, {'attr':{'class': 'btn btn-primary'}} ) }}
    {{ form_end(form) }}
</div>
{% endblock %}